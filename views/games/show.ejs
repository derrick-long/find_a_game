<h1> <%= game.title %>  </h1>
<p> <%= game.description %> </p>

<% if(user && game.numberOfPlayers > 0) { %>
<form action="/games/player/<%= game.id %>" method="post">
  <input type="submit" value="Join Game" class="btn-success">
</form>
<% } %>

<!-- need to clean up this view logic/make into a drop down  -->
<% if(user) { %>
  <% game.players.forEach(function(player){
        if(player.id == user.id ) { %>
          <div class="form-group">
            <form action="/users/playerReview/<%= game.id %>" method ="post">
              <label for="playerReviewBody"> Review Your Game Master </label>
              <textarea class="form-control" name="playerReviewBody"> </textarea>
              <button type="submit" class="btn btn-primary">Submit</button>
            </form>
          </div>
          <% } %>
  <% }) %>
<% } %>
<!-- So basically we're going to use our currently logged in user
And we're going to use this button to have them added to the game object
found here as a player. Then we need to deincrement our numberofPlayers attribute
Also need to make sure the current dude is not already signed up to this game   -->
<p> Hosted by <%= game.host.firstName %>  <%= game.host.lastName %> </p>
