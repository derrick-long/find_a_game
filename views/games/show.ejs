<h1> <%= game.title %>  </h1>
<p> <%= game.description %> </p>
<!-- need another val don't show button if game is full  -->
<% if(user && game.numberOfPlayers > 0) { %>
<form action="/games/player/<%= game.id %>" method="post">
  <input type="submit" value="Join Game" class="btn-success">
</form>
<% } %>

<!-- need to clean up this view logic  -->
<% game.players.forEach(function(player){
      if(player.id == user.id ) { %>
        <div class="form-group">
          <form action="/users/playerReview/<%= game.id %>" method ="post">
            <label for="playerReviewBody"> Review Your Game Master </label>
            <textarea class="form-control" name="playerReviewBody"> </textarea>
        </div>
        <% } %>
<% }) %>

