<div class="row">
  <div class="col">
  </div>
  <div class="col-6">

    <% if(errors.length > 0) {%>
      <% errors.forEach(function(error){ %>
         <div class= "alert alert-danger"> <%= error.text %> </div>
      <% }) %>
    <% } else { %>

    <% } %>


    <h2> Add A New Game </h2>

    <form action="/games" method="post">

      <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control form-control-sm" name="title" aria-describedby="title" placeholder="Enter Title">
      </div>

      <div class="form-group">
        <label for="address">Address</label>
        <input type="text" class="form-control form-control-sm" name="address"  placeholder="Enter Address">
      </div>

      <div class="form-group">
        <label for="zip">ZIP</label>
        <input type="text" class="form-control form-control-sm" name="zip">
      </div>

      <div class="input-group">
        <select class="custom-select" id="locationType" name="locationType">
          <option selected>Choose location type</option>
          <option value="novice">Buisness</option>
          <option value="experienced">Home</option>
        </select>
      </div>

      <div class="form-inline">
        <label for="number">Number of Players</label>
        <input type="number" min="1" max="10" class="form-control form-control-sm" name="number">
      </div>

      <div class="input-group">
        <select class="custom-select" id="experience" name="experience">
          <option selected>Choose Experience Level</option>
          <option value="novice">Novice</option>
          <option value="experienced">Experienced</option>
          <option value="veteran">Veteran</option>
        </select>
      </div>

      <div class="form-group">
        <label for="description">Description</label>
        <textarea class="form-control"  name="description"> </textarea>
      </div>


      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>
  <div class="col">
  </div>
</div>
